.text-center
  %h1.mb-30
    = t('devise.forgot_password')
  %p.general-password-text
    = t('devise.forgot_password_description')
.general-form.field
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, defaults: { input_html: { class: "form-control" }}) do |f|
    .form-group.mb-30
      = f.input :email, autofocus: true, autocomplete: "email", placeholder: t('devise.email')
    .text-center
      .actions
        = f.submit t('devise.email_instructions'), class: 'btn btn-default mb-20'
      = link_to t('devise.cancel'), url_for(:back), class: "in-gold-500"

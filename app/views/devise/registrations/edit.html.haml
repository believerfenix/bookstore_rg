%main.container
  %h1.general-title-margin
    = t('registrations.settings')
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: "#address", 'aria-controls': "address", role: "tab", 'data-toggle': "tab"}
        = t('registrations.address')
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: "#privacy", 'aria-controls': "privacy", role: "tab", 'data-toggle': "tab"}
        = t('registrations.privacy')
  .tab-content
    #address.tab-pane.fade.in.active.general-main-wrap{role: "tabpanel"}
      .hidden-xs.hidden-sm
        .row
          .col-md-5
            %h3.general-subtitle.mt-0
              = t("address.kind.billing")
          .col-md-5.col-md-offset-1
            %h3.general-subtitle.mt-0
              = t("address.kind.shipping")
      .row
        .col-md-5.mb-40
          = render 'addresses/partials/form', address: AddressForm.new(current_user.addresses.billing.first&.attributes), kind: :billing
        .col-md-5.col-md-offset-1.mb-25
          = render 'addresses/partials/form', address: AddressForm.new(current_user.addresses.shipping.first&.attributes), kind: :shipping
    #privacy.tab-pane.fade{role: "tabpanel"}
      .row.mb-60
        = render 'devise/registrations/partials/change_email'
        = render 'devise/registrations/partials/change_password'
        = render 'devise/registrations/partials/remove_account'

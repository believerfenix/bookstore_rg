.text-center
  = render partial: 'devise/shared/facebook_authoriization'
.general-form.field
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), defaults: { input_html: { class: "form-control" }}) do |f|
    .form-group.mb-30
      = f.input :email, autofocus: true, autocomplete: "email", placeholder: t('devise.email')
    .form-group.mb-30
      = f.input :password, autocomplete: "current-password", placeholder: t('devise.password')
    .form-group.mb-30
      = f.input :password_confirmation, autocomplete: "new-password", placeholder: t('devise.confirm_password')
    .text-center
      .actions
        = f.submit t('devise.sign_up'), class: 'btn btn-default mb-20'
    .text-center
      %p.general-sign-text.text-center
        = t('devise.have_account')
        = link_to t('devise.log_in'), new_session_path(resource_name), class: 'in-gold-500'

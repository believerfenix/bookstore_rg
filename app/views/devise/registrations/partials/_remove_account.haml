.col-sm-12
  %p.in-gold-500.font-18.mb-25
    = t('devise.remove_account')
  = simple_form_for(resource_name, url: registration_path(resource_name), method: :delete, defaults: { input_html: { class: "form-control" }}) do |f|
    .general-settings-btn
      = f.button :submit, 'Please Remove My Account', id: "Destroy_Account_Button", disabled: "disabled", class: "btn mb-20"
    .form-group.checkbox.general-settings-checkbox
      %label.checkbox-label
        = check_box_tag 'Destroy_Account_Checkbox', true, false, class: 'checkbox-input', hidden: true
        %span.checkbox-icon
          %i.fa.fa-check
        %span.checkbox-text
          = t('devise.remove_account_approve')

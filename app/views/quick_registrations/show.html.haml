%main.container
  .row
    .col-md-5.mb-40
      .text-center
        %h3.general-subtitle= t('checkouts.returning_customer')
        = render partial: 'devise/shared/facebook_authorization'
        = simple_form_for('user', url: session_path('user'), defaults: { input_html: { class: "form-control" }}) do |f|
          .form-group.mb-30
            = f.input :email, autofocus: true, autocomplete: "email", placeholder: t('devise.email')
          .form-group.mb-30
            = f.input :password, autocomplete: "current-password", placeholder: t('devise.password')
            = link_to t('devise.forgot_password'), new_user_password_path, class: 'help-block in-gold-500'
          .text-center
            .actions
              = f.submit t('devise.log_in'), class: 'btn btn-default mb-20'
    .col-md-5.col-md-offset-1.mb-60
      .text-center
        %h3.general-subtitle= t('checkouts.new_customer')
        = render partial: 'devise/shared/facebook_authorization'
      .mb-40
        %p.mb-5= t('checkouts.quick_register')
        %p.general-info-text.font-12.mb-20= t('checkouts.you_will_be_able_to_create_password_later')
        = simple_form_for(:user, url: quick_registration_path(:user), method: :post, defaults: { input_html: { class: "form-control" }}) do |f|
          .form-group.mb-30
            = f.input :email, autofocus: true, placeholder: t('devise.email')
          = f.submit t('checkouts.continue_checkout'), class: 'btn btn-default mb-20'

= simple_form_for(address, url: address_path, method: :put, html: { id: "#{kind}_address" },
 defaults: { input_html: { class: "form-control" }, wrapper_html: { class: 'form-group' }}) do |f|
  .visible-xs.visible-sm
    %h3.general-subtitle.mt-0
      = t("address.kind.#{kind}")
  = render 'addresses/partials/form_fields', f: f, kind: kind
  = f.button :submit, t('button.save'), class:"btn btn-default btn"
